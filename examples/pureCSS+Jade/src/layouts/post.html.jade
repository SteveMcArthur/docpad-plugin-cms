---
layout: default
---
div
  // A wrapper for all the blog posts
  .posts
    section.post
      header.post-header
        img.post-avatar(alt="#{document.author}'s avatar", height='48', width='48', src='#{authorImages[document.author]}')
        h1.post-title #{document.title}
        p.post-meta
          | By 
          a.post-author(href='#') #{document.author}
          |  under 
          != partial('categories',{document:document})

      .post-description
        if document.img
          div.post-images.pure-g
            - each item in document.img
              .pure-u-1.pure-u-md-1-2
                a(href='#{item.src}')
                  img.pure-img-responsive(alt='#{item.alt}', src='#{item.src}')
                .post-image-meta
                  h3 CSSConf Photos
        p
          != document.contentRenderedWithoutLayouts